<!doctype html>
<html>
    <head>
      <meta charset="utf-8">
      <meta http-equiv="X-UA-Compatible" content="IE=edge">
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <meta http-equiv="refresh" content="10">
      <title>sideos Login Example</title>
      <link href="//cdn.muicss.com/mui-0.10.3/css/mui.min.css" rel="stylesheet" type="text/css" />
      <link href="/stylesheets/style.css" rel="stylesheet" type="text/css" />
      <script src="//cdn.muicss.com/mui-0.10.3/js/mui.min.js"></script>
    </head>
    <body>
      <header class="mui-appbar mui--z1">
        <div class="mui-container">
            <table>
              <tr class="mui--appbar-height">
                <td class="mui--text-title">RaspiLab</td>
                <td class="mui--text-right">
                  <ul class="mui-list--inline mui--text-body2">
                    <li><a href="#">About</a></li>
                    <li><a href="/logout">Logout</a></li>
                  </ul>
                </td>
              </tr>
            </table>
        </div>
      </header>
      <div id="content-wrapper" class="mui--text-center">
        <div class="mui--appbar-height"></div>
          <br>
          <br>
          <div class="mui--text-display3">SMS OTP Petze</div>
          <br>
          <br>
          <div class="mui-container">
            <div class="mui-row">
              <div class="mui-col-md-4"></div>
              <div class="mui-col-md-4">
                <div class="mui-panel">
                  <p>Hello <%= vc.name %></p>
                  <p>verified by <%= vc.issuer %></p>
                  <table class="mui-table mui-table--bordered">
                    <thead>
                      <tr>
                        <th>App</th>
                        <th>OTP</th>
                      </tr>
                    </thead>
                    <tbody>
                    <% for (o in otps) { %>
                      <tr>
                        <td><%= otps[o].app %></td>
                        <td><%= otps[o].otp %></td>
                      </tr>
                    <% } %>
                    </tbody>
                  </table>
                  <% if (otps.length < 1) { %>
                    <p>No OTP messages for you</p>
                  <% } %>
                </div>
              </div>
              <div class="mui-col-md-4"></div>
            </div>
          </div>
      </div>
      <footer>
          <div class="mui-container mui--text-center">
            Made with â™¥ by <a href="https://www.muicss.com">MUICSS</a> and <a href="https://sideos,io">sideos</a>
          </div>
      </footer>
    </body>
</html>
